{{#extend "_default"}}
  {{#content "main"}}
    <div class="block block--cta">
      <div class="container block__inner">
        <div class="block__content form">
          <h1>Add Service Provider</h1>
          <!-- ko if: hasErrors -->
          <h2>There were errors in your submission:</h2>
          <ul data-bind="foreach: errors">
            <li data-bind="text: $data"></li>
          </ul>
          <!-- /ko -->
          <article>
            <dl class="key-value-pair">
              <dt class="key-value-pair__key">Name</dt>
              <dd class="key-value-pair__value">
                <input data-bind="textInput: name" type="text" />
              </dd>
            </dl>
            <button data-bind="click: save" class="btn btn--primary"><span class="btn__text">save</span></button>
          </article>
        </div>
      </div>
    </div>
  {{/content}}

  {{#content "gutter"}}{{/content}}
{{/extend}}
