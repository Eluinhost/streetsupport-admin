<div class="block block--highlight admin-header">
  <div class="container block__inner">
      <header data-bind="with: need">
        <h1>Responses to Need '<span data-bind="html: description"></span>'</h1>
        <p data-bind="html: reason"></p>
      </header>
    </div>
  </div>
</div>
<div class="block">
  <div class="container block__inner">
    <div class="block__content">
      <!-- ko if: hasOffers -->
      <h2>Offers received</h2>
      <div data-bind="foreach: offers">
        <blockquote>
          <p data-bind="html: message"></p>
          <p><a data-bind="attr: { href: emailLink }, text: email"></a> <span data-bind="text: createdOn"></span><p>
        </blockquote>
      </div>
      <!-- /ko -->
      <!-- ko ifnot: hasOffers -->
      <p>No offers to help received yet.</p>
      <!-- /ko -->
    </div>
  </div>
</div>
