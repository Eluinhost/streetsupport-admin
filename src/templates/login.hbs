{{#extend "_default"}}
  {{#content "main"}}
    <div class="block">
      <div class="container block__inner">
        <h1>Login</h1>
        <form class="form">
            {{> form-feedback}}
            <dl class="key-value-pair">
              <dt class="key-value-pair__key">Username</dt>
              <dd class="key-value-pair__value"><input data-bind="textInput: username" type="text" name="username" class="form__input" />
              </dd>
              <dt class="key-value-pair__key">Password</dt>
              <dd class="key-value-pair__value"><input data-bind="textInput: password" type="password" name="password" class="form__input" />
              </dd>
            </dl>
          <button data-bind="click: submit" class="btn btn--primary">
            <span class="btn__text">Login</span>
          </button>
        </form>
        <a href="request-reset-password.html">Forgotten password?</a>
      </div>
    </div>
  {{/content}}

  {{#content "gutter"}}{{/content}}
{{/extend}}
