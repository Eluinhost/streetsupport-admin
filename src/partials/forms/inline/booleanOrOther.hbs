  <label class="form__label form__label--radio">
  <input type="radio" value="1" name="{{ dataFieldName }}" data-bind="checked: {{ dataFieldName }}" class="" />
  Yes</label>
  <label class="form__label form__label--radio">
  <input type="radio" value="2" name="{{ dataFieldName }}" data-bind="checked: {{ dataFieldName }}" class="" />
  {{ thirdOptionLabel }}</label>
  <!-- /ko -->
