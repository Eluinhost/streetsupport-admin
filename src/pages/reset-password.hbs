{{#extend "_default"}}
  {{#content "main"}}
    <div class="block block--highlight">
      <div class="container block__inner">
        <header>
          <h1>Reset Password</h1>
        </header>
      </div>
    </div>
    <div class="block">
      <div class="container block__inner">
        <!-- ko if: isSubmissionSuccessful -->
        <p>Submission successful! You can now <a href="login.html">login</a>.</p>
        <!-- /ko -->
        <!-- ko ifnot: isSubmissionSuccessful -->
        <p>Please enter your new password. It should contain at least 12 characters and use a mixture of numbers, upper and lowercase characters.</p>
        <form class="form">
          {{> form-feedback}}
          <dl class="key-value-pair">
            <dt class="key-value-pair__key">Password</dt>
            <dd class="key-value-pair__value">
              <input data-bind="textInput: password" type="password" class="form__input" />
            </dd>
            <dt class="key-value-pair__key">Verify Password</dt>
            <dd class="key-value-pair__value">
              <input data-bind="textInput: password2" type="password" class="form__input" />
            </dd>
          </dl>
          <button data-bind="click: submit" class="btn btn--primary">
            <span class="btn__text">Submit</span>
          </button>
        </form>
        <!-- /ko -->
      </div>
    </div>
  {{/content}}
  {{#content "gutter"}}{{/content}}
{{/extend}}
