---
title: Login - Street Support Admin
description: Street Support - Making it easier to help homeless people in Manchester
jsName: login
pageName: login
---

{{#extend "_default"}}
  {{#content "main"}}
    <div class="block block--cta">
      <div class="container block__inner">
        <form class="form">
          <fieldset>
            <legend>Login</legend>
            <p data-bind="text: message"></p>
            <!-- ko if: hasErrors -->
            <h2>There were errors in your submission:</h2>
            <ul data-bind="foreach: errors">
              <li data-bind="text: $data"></li>
            </ul>
            <!-- /ko -->
            <ol>
              <li>
                <label for="username">Username</label>
                <input data-bind="textInput: username" type="text" name="username" placeholder="Username" />
              </li>
              <li>
                <label for="password">Password</label>
                <input data-bind="textInput: password" type="password" name="password" placeholder="Password" />
              </li>
            </ol>
          </fieldset>
          <button data-bind="click: submit" class="btn btn--primary">
            <span class="btn__text">Login</span>
          </button>
        </form>
      </div>
    </div>
  {{/content}}

  {{#content "gutter"}}{{/content}}
{{/extend}}
